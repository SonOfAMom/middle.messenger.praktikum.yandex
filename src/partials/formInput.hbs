<div class="form-input">
  <label class="form-input__label" for="{{name}}">{{label}}</label>
  <input
    class="form-input__input {{#if invalid}}invalid{{/if}}"
    name="{{name}}" id="{{name}}"
    type="{{type}}"
    placeholder="{{placeholder}}"
  >
  {{#if errorMessage}}
    <span class="form-input__errorMessage">{{errorMessage}}</span>
  {{/if}}
</div>